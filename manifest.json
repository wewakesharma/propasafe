{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.0",
  "description": "A simple browser extension.",
  "action": {
    "default_popup": "prop.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab",
    "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["prop.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html"
}